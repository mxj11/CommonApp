<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reflect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lxz.common.fourth.activity.ReflectActivity">
    <include layout="@layout/titlebar"></include>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_object"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过反射创建对象"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过反射获取属性名称、值"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过反射获取方法"/>

</LinearLayout>
