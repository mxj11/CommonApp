<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lxz.common.MainActivity">

    <include layout="@layout/titlebar"/>

    <FrameLayout
    android:id="@+id/fl_main"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    ></FrameLayout>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#11000000"
        android:padding="5dp"
        >

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/bottom_tag_style"
            android:text="开源框架"
            android:drawableTop="@drawable/selector_rb_common_frame_drawable"
            />
        <RadioButton
            android:id="@+id/rb_second"
            style="@style/bottom_tag_style"
            android:text="Android高级"
            android:drawableTop="@drawable/selector_rb_thirdparty_drawable"
            />
        <RadioButton
            android:id="@+id/rb_third"
            style="@style/bottom_tag_style"
            android:text="零碎知识点"
            android:drawableTop="@drawable/selector_rb_custom_drawable"
            />
        <RadioButton
            android:id="@+id/rb_fourth"
            style="@style/bottom_tag_style"
            android:text="其他"
            android:drawableTop="@drawable/selector_rb_other_drawable"
            />

    </RadioGroup>


</LinearLayout>
